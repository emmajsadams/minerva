echo "🚀 Running pre-commit checks..."

# Check for secrets
echo "🔍 Checking for secrets..."
node scripts/check-secrets.js

# Run linter
echo "🧹 Running linter..."
bun run lint:fix

# Run formatter  
echo "🎨 Running formatter..."
bun run format

# Quick build check (no full build to keep it fast)
echo "🔍 Type checking..."
bun run type-check

echo "✅ All pre-commit checks passed!"
